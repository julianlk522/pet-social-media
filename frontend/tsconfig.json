{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"jsx": "react-jsx",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"outDir": "../dist/frontend"
	},
	"include": [
		"frontend/global.d.ts",
		"*.ts",
		"*.tsx",
		"src",
		"src/*.ts",
		"src/*.tsx"
	],
	"exclude": ["node_modules"]
}
